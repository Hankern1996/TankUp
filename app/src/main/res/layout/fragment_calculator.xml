<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculator_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        style="?android:listViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Calculator"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date_button"
        android:text="Select a date for your trip"/>

    

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:listSeparatorTextViewStyle"
            android:id="@+id/title"
            android:text="Enter a title for your trip"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enter_title"
            app:layout_constraintTop_toBottomOf="@id/title"/>

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/enter_title"
            android:id="@+id/distance"
            android:text="Enter your distance in km:"/>

        <EditText
            android:id="@+id/enter_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/distance"/>

        <TextView
            android:textSize="20dp"
            android:id="@+id/Km"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:text="Km"
            app:layout_constraintStart_toEndOf="@id/enter_distance"/>

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/enter_distance"
            android:id="@+id/price"
            android:text="Enter gas price in Euros:"/>

        <EditText
            app:layout_constraintTop_toBottomOf="@id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enter_price"/>

        <TextView
            android:textSize="20dp"
            android:id="@+id/Euro"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="197dp"
            android:text="Euro"
            app:layout_constraintStart_toEndOf="@id/enter_price"/>

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passenger"
            app:layout_constraintTop_toBottomOf="@id/enter_price"
            android:text="Enter number of passengers in the car:"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enter_passenger"
            app:layout_constraintTop_toBottomOf="@id/passenger"/>

        <TextView
            android:textSize="20dp"
            android:id="@+id/Passengers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="273dp"
            android:text="Passengers"
            app:layout_constraintStart_toEndOf="@id/enter_passenger"/>

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:textSize="20sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deleteButton"
        android:text="delete route"/>


    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sendButton"
        android:text="Send reminder"/>


</LinearLayout>